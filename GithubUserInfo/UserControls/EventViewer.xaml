<UserControl x:Class="GithubUserInfo.UserControls.EventViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GithubUserInfo.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="140" d:DesignWidth="300">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" HorizontalAlignment="Stretch" Height="53" VerticalAlignment="Top">
            <Label x:Name="label_type" Content="EventType" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" Foreground="Red" />
        </ScrollViewer>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" HorizontalAlignment="Stretch" Height="50" VerticalAlignment="Top" Margin="0,51,0,0">
            <Label x:Name="label_reponame" Content="Repository Name" VerticalAlignment="Top" FontSize="16"/>
        </ScrollViewer>
        <Label x:Name="label_createdat" Content="Created at " VerticalAlignment="Top" FontSize="10" FontWeight="Bold" Margin="0,115,0,0"/>
    </Grid>
</UserControl>
